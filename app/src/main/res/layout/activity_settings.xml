<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView_glucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:text="@string/glucose"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/editText_glucose"
            app:layout_constraintTop_toTopOf="@id/editText_glucose"
            app:layout_constraintBottom_toBottomOf="@id/editText_glucose"/>

    <EditText
            android:id="@+id/editText_glucose"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="5.9"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meal"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/textView_glucose"
            app:layout_constraintTop_toTopOf="@id/seekBar_meal"
            app:layout_constraintBottom_toBottomOf="@id/seekBar_meal"/>

    <SeekBar
            android:id="@+id/seekBar_meal"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="148dp"
            android:layout_height="28dp"
            android:max="10"
            android:progress="0"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_glucose"/>

    <TextView
            android:id="@+id/basalInsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basal_ins"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/textView_glucose"
            app:layout_constraintTop_toTopOf="@id/basalEditText"
            app:layout_constraintBottom_toBottomOf="@id/basalEditText"/>

    <EditText
            android:id="@+id/basalEditText"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/basal_value"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBar_meal"/>

    <TextView
            android:id="@+id/bolusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bolus_ins"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/textView_glucose"
            app:layout_constraintTop_toTopOf="@id/bolusEditText"
            app:layout_constraintBottom_toBottomOf="@id/bolusEditText"/>

    <EditText
            android:id="@+id/bolusEditText"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/bolus_value"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/basalEditText"/>

    <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/textView_glucose"
            app:layout_constraintTop_toTopOf="@id/timeText"
            app:layout_constraintBottom_toBottomOf="@id/timeText"/>

    <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="14:21"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bolusEditText"/>


    <TextView
            android:id="@+id/TextView_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="88dp"
            android:text="@string/meal"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/seekBar_meal"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/textView_glucose"
            app:layout_constraintTop_toTopOf="@id/dateText"
            app:layout_constraintBottom_toBottomOf="@id/dateText"/>

    <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="21.03.2018"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeText"/>

    <View
            android:id="@+id/dividingLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dateText"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_address"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/IPADDR_View"
            app:layout_constraintBottom_toBottomOf="@id/IPADDR_View"
            app:layout_constraintEnd_toStartOf="@id/IPADDR_View"/>

    <EditText
            android:id="@+id/IPADDR_View"
            android:layout_width="149dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dividingLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/client_id"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintTop_toTopOf="@id/CLIENTID_View"
            app:layout_constraintBottom_toBottomOf="@id/CLIENTID_View"
    />


    <EditText
            android:id="@+id/CLIENTID_View"
            android:layout_width="149dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/IPADDR_View"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="148dp"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CLIENTID_View"/>


</android.support.constraint.ConstraintLayout>